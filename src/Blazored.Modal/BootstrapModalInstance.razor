@inherits BlazoredModalInstance

<div class="modal-backdrop fade show" @onclick="HandleBackgroundClick"></div>
<div class="modal fade show d-block" style="pointer-events: none;" tabindex="-1" role="dialog" >
    <div class="modal-dialog @Position" role="document">
        <div class="modal-content">
            @if (!HideHeader)
            {
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    @if (!HideCloseButton)
                    {
                        <button type="button" class="close" aria-label="Close" @onclick="(() => Parent.CancelInstance(Id))">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    }

                </div>
            }
            <div class="modal-body">
                <CascadingValue Value="this">
                    @Content
                </CascadingValue>
            </div>
            
        </div>
    </div>
</div>
@code { 

    protected override string GetPositionClass(ModalPosition position)
    {
        switch (position)
        {
            case ModalPosition.Center:
                return "modal-dialog-centered";
            //case ModalPosition.TopLeft:
            //    return "blazored-modal-topleft";
            //case ModalPosition.TopRight:
            //    return "blazored-modal-topright";
            //case ModalPosition.BottomLeft:
            //    return "blazored-modal-bottomleft";
            //case ModalPosition.BottomRight:
            //    return "blazored-modal-bottomright";
            default:
                return "";
        }
    }

}
